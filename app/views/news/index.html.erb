<div class="container">

  <div class="row">

    <h1>News</h1>

    <ul class="list-group">
            <% @news.each do |ns| %>
            <%= link_to ns, class: "list-group-item list-group-item-action" do %>
              <p class="list-group-item-text">
                  <%= ns.body %>
                </p>
              <% end %>
            <% end %>

      </ul>

    <br>
        <% if user_signed_in? %>
          <%= link_to 'Добавить новость', new_news_path, class: "btn btn-primary" %>
        <% end %>
  </div>
 
</div>